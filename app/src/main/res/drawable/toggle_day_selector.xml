<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado activado (seleccionado) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#047A7A"/> <!-- Verde cuando está activado -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Estado desactivado -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Gris claro cuando no está activado -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
