<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Botón de regreso -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="Volver"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo recordatorio"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        android:layout_marginStart="8dp"/>

    <!-- TimePicker -->
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:timePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <!-- Sección Frecuencia con estilo de tarjeta -->
    <LinearLayout
        android:id="@+id/frecuenciaContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_glucemia"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/timePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtFrecuencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frecuencia"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Scroll horizontal para los días -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/daysContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ToggleButton
                    android:id="@+id/daySun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:textOff="Dom"
                    android:textOn="Dom"
                    android:background="@drawable/toggle_day_selector"
                    android:textColor="@android:color/black"/>

                <ToggleButton
                    android:id="@+id/dayMon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:textOff="Lun"
                    android:textOn="Lun"
                    android:background="@drawable/toggle_day_selector"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="4dp"/>

                <ToggleButton
                    android:id="@+id/dayTue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:textOff="Mar"
                    android:textOn="Mar"
                    android:background="@drawable/toggle_day_selector"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="4dp"/>

                <ToggleButton
                    android:id="@+id/dayWed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:textOff="Mié"
                    android:textOn="Mié"
                    android:background="@drawable/toggle_day_selector"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="4dp"/>

                <ToggleButton
                    android:id="@+id/dayThu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:textOff="Jue"
                    android:textOn="Jue"
                    android:background="@drawable/toggle_day_selector"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="4dp"/>

                <ToggleButton
                    android:id="@+id/dayFri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:textOff="Vie"
                    android:textOn="Vie"
                    android:background="@drawable/toggle_day_selector"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="4dp"/>

                <ToggleButton
                    android:id="@+id/daySat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:textOff="Sáb"
                    android:textOn="Sáb"
                    android:background="@drawable/toggle_day_selector"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Nota -->
    <EditText
        android:id="@+id/etNota"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:hint="Medicamento, dosis..."
        android:background="@android:drawable/edit_text"
        android:gravity="top"
        android:padding="12dp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/frecuenciaContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botón Guardar -->
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:backgroundTint="#047A7A"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/etNota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="60dp"/>

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
