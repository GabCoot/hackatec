<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#E0F7FA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/layoutContenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@id/checkSeleccion"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/txtNivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel: 85 mg/dL"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: Normal"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtMomento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Momento: Antes del desayuno"
                android:textSize="14sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtFechaHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: 05/25/2025 08:00 AM"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkSeleccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
